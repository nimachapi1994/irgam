

@{
    ViewBag.Title = "ManageContactUs";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}




<div style="margin:auto;font-family:Tahoma">

    <br />
    <br />
    <div class="alert-success" style="margin:auto">@TempData["msgsuccess"]</div>
    <hr />
    <br />

    <table class="table table-bordered table-hover table-responsive table-striped text-center" style="margin:auto;width:300px" width="300" dir="rtl">
        <tr style="background-color:#151111" class="text-center">
            <th class="text-center">نام</th>
            <th class="text-center">ایمیل</th>
            <th class="text-center">موضوع</th>
            <th class="text-center">شماره تماس</th>
            <th class="text-center">مشاهده متن ارسالی</th>
            <th class="text-center">حذف</th>
        </tr>
        @foreach (var item in ViewBag.ShowAllContacts as IEnumerable<KabiriGam.Models.SelectAllOneContacts_Result>)
            {
            <tr>
                <td>@item.NameAndFamily</td>
                <td>@item.Email</td>
                <td>@item.Subject</td>
                <td>@item.PhoneNumber</td>
                <td><a href="/ContactUsManagment/ShowOneContact?id=@(item.Id)" class="btn btn-info">مشاهده متن ارسالی</a></td>

                <td><a href="/ContactUsManagment/DeleteContactUs?id=@(item.Id)" class="btn btn-danger">حذف</a></td>
            </tr>
        }
    </table>
    <br />
    <hr />
</div>
</body>

@for (int i = 0; i < 5; i++)
{
    <br />
}





