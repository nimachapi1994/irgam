
@{
    ViewBag.Title = "ShowAllProjects";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


 


<div style="margin:auto;width:80%;font-family:Tahoma;font-size:large" dir="rtl">
    <br />
    <label>تمامی پروژه های ثبت شده</label>
    <hr />
    <div class="alert-success">@TempData["msgsuccess"]</div>
    @for (int i = 0; i < 2; i++)
    {
        <br />
    }

    <table class="table table-bordered table-responsive pull-right" dir="rtl" style="font-size:large">
        <tr>
         
            <th class="text-center"> نام پروژه</th>
            <th class="text-center"> تاریخ ایجاد/ ویرایش پروژه</th>
            <th class="text-center">تصویر</th>
            <th class="text-center">کامنت</th>
            <th class="text-center">ویرایش</th>
            <th class="text-center">حذف</th>
        </tr>
       
        @foreach (var item in ViewBag.showAllProjects as IEnumerable<KabiriGam.Models.SelectAllProjects_Result>)
        {
            <tr dir="rtl">

              
                <td dir="rtl" class="text-center">@item.Name</td>
                <td dir="rtl" class="text-center">@KabiriGam.Controllers.HomeController.EngToPer(item.Date.Value)</td>
                <td class="text-center">


                    <img style="width:200px;height:200px" class="img-thumbnail img-responsive img-rounded" src="@($"data:image/jpeg;base64,{Convert.ToBase64String(item.logo)}")" />



                </td>





                <td class="text-center"><a href="/CommentForproject/ShowAllComments?id=@item.Id">مدیریت کامنت های این پروژه</a></td>
                <td><a href="/Project/EditProjects?id=@(item.Id)" class="btn btn-success btn-sm">ویرایش</a></td>
                <td><a id="btnDelete" href="/Project/DeleteProjects?id=@(item.Id)" class="btn btn-warning btn-sm">حذف</a></td>

            </tr>

        }
    </table>
    <script>
    btnDelete.onclick = function () {
        if (confirm("آیا اطمینان دارید؟")==true) {
            return true;
        
        } else {
            return false;
        }

        }
    </script>

</div>


