
@{
    ViewBag.Title = "Slider";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-md-2 col-sm-2 col-xs-2"></div>
<div class="col-md-4 col-sm-12 col-xs-12" style="font-family:Tahoma">
    <div class="container text-center">



        <form action="/Slider/InsertSliderConfirm" enctype="multipart/form-data" method="post">


            <br /><br />
            <label>آپلود عکس</label>

            <hr />
            <div class="text-center">
                <div class="form-group  col-xs-12">
                    <input class="form-control" type="file" name="img" id="txtgetimg" />
                </div>

            </div>
            <div id="divshowimg" class="form-group text-center">

                <img id="img1" style="width:300px;height:350px" class="form-control" />
            </div>

            <button class="btn btn-success" id="btn1">ذخیره اطلاعات</button>
            <button class="btn btn-danger btn-md" id="btnclose" type="button">&times;</button>

        </form>
    </div>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script>
        $(txtgetimg).change(function () {
            var reader = new FileReader();
            reader.readAsDataURL(txtgetimg.files[0])
            reader.onloadend = function (e) {
                img1.src = e.target.result;
            }
        })
        $(btnclose).click(function () {
        img1.src=''

        txtgetimg.src = '';
        txtgetimg.files[0] = ''
        txtgetimg.value = "";
            $(txtgetimg).attr("src","")
        })
    </script>
    @for (int i = 0; i < 5; i++)
    {
        <br />
    }
</div>
<div class="col-md-4 col-sm-12 col-xs-12" style="font-family:Tahoma">
    <br />
    <br />
    <label>تصاویر اسلایدر</label>
    <hr />

    @foreach (var item in ViewBag.showallslider as IEnumerable<KabiriGam.Models.Selectslider_Result>)
    {
        <div class="col-md-4">
            <img src="@($"data:image/jpeg;base64,{Convert.ToBase64String(item.Pic)}")" class="img-thumbnail img-responsive" style="width:400px;height:200px" />
            <a class="btn btn-default btn-md" value="@item.Id" href="/slider/DeleteSlider?id=@item.Id">حذف</a>
            <br />
            <hr />
        </div>
    }
</div>
<div class="col-md-2 col-sm-2 col-xs-2"></div>

